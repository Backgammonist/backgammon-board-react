{
  "name": "backgammon-board-react",
  "version": "1.0.0",
  "description": "Simplistic backgammon board in react",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite --host",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "format": "prettier --write  --ignore-unknown .",
    "prepare": "husky",
    "commitlint": "commitlint --edit $1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Backgammonist/backgammon-board.git"
  },
  "keywords": [
    "backgammon",
    "boardgame",
    "board"
  ],
  "author": "Laszlo Heves<heves.laszlo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Backgammonist/backgammon-board/issues"
  },
  "homepage": "https://github.com/Backgammonist/backgammon-board#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "resolutions": {
    "typescript-eslint": "^8.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/browser": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "playwright": "^1.49.1",
    "prettier": "3.4.2",
    "styled-components": "^6.1.13",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.8",
    "vitest-browser-react": "^0.0.4"
  }
}
